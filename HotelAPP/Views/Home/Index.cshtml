@model IEnumerable<HotelAPP.Models.Room>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h3>Список комнат</h3>

    @*<p>
        <a asp-action="Edit" class="btn">Создать</a>
    </p>*@
    <hr />

    <table>
        <tr>
            <th>#</th>
            <th>Вместимость</th>
            <th>Комфортность</th>
            <th>Стоимость за 1 ночь</th>
        </tr>
        @foreach (var room in Model)
        {
            <tr>
                <td>@room.Id</td>
                <td>@room.Capacity</td>
                <td>@room.Comfort</td>
                <td>@room.Price</td>
            </tr>
        }
    </table>
</div>

